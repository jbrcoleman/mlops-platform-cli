FROM pytorch/pytorch:2.2.1-cuda12.1-cudnn8-runtime

# Set working directory
WORKDIR /workspace

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-common.txt requirements-pytorch.txt ./

# Install Python dependencies
# Note: PyTorch with CUDA support is already included in the base image
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-common.txt && \
    pip install --no-cache-dir -r requirements-pytorch.txt

# Create directories for code and data
RUN mkdir -p /workspace/code /workspace/data /workspace/outputs

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    MLFLOW_TRACKING_URI="" \
    MLFLOW_EXPERIMENT_NAME=""

# Default command
CMD ["python", "--version"]
